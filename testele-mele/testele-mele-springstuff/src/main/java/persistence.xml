               http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="pu-sybase" transaction-type="RESOURCE_LOCAL">
        <description>Persistence for Sybase</description>
        <class>springstuff.sybase.ClasaUnu</class>
        <class>springstuff.sybase.ClasaDoi</class>
        <class>springstuff.sybase.Clasa3</class>

